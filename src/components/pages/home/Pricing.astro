---
import Container from '@/components/shared/Container.astro';
import Button from '@/components/ui/Button.astro';

const plans = [
  {
    name: 'Landing Page',
    price: '$1,999',
    description:
      'Perfect for new businesses, product launches, or a professional online presence.',
    priceSubtext: 'One-time project cost',
    buttonText: 'Select Plan',
    features: [
      'Single-Page Custom Design',
      'High-Performance Astro Build',
      'Mobile-First Responsive Design',
      'Contact Form Integration',
      'Basic SEO Setup',
    ],
  },
  {
    name: 'Business Site',
    price: '$4,500',
    description:
      'A complete, multi-page website to establish your brand and drive growth.',
    priceSubtext: 'Our most popular package',
    buttonText: 'Select Plan',
    isMostPopular: true,
    features: [
      'Up to 5 Custom-Designed Pages',
      'Everything in Landing Page, plus...',
      'Blog / Content Management System (CMS)',
      'Advanced SEO Optimization',
      '1 Month of Post-Launch Support',
    ],
  },
  {
    name: 'Custom Solution',
    price: "Let's Talk",
    description:
      'For complex web applications, mobile apps, or large-scale projects.',
    priceSubtext: 'Tailored to your unique needs',
    buttonText: 'Request a Custom Quote',
    features: [
      'Custom Web & Mobile Applications',
      'React / Svelte / React Native Stacks',
      'E-commerce & Database Integration',
      'Third-Party API Integrations',
      'Dedicated, Ongoing Partnership',
    ],
  },
];
---

<Container as='section'>
  <div
    class='mx-auto max-w-4xl sm:text-center animate-fade-in-up scroll-trigger'
  >
    <p class='heading-3'>Transparent Pricing</p>
    <h2 class='mt-2 heading-1 max-w-2xl'>
      Find the Right Plan for Your Project
    </h2>
  </div>
  <p
    class='mx-auto mt-6 max-w-2xl text-pretty text-lg font-medium text-foreground sm:text-center sm:text-xl/8 animate-fade-in-up lg:animate-delay-200 scroll-trigger'
  >
    A clear investment for tangible results. Below are my most popular packages.
    Don't see what you need? Let's create a custom plan.
  </p>
  <div
    class='mt-20 flow-root animate-fade-in-up lg:animate-delay-300 scroll-trigger'
  >
    <div
      class='isolate -mt-16 grid max-w-sm grid-cols-1 gap-y-0 divide-y divide-gray-100 sm:mx-auto lg:-mx-8 lg:mt-0 lg:max-w-none lg:grid-cols-3 lg:divide-x lg:divide-y-0 xl:-mx-14'
    >
      {
        plans.map((plan, index) => (
          <div
            class={`pt-16 ${index !== plans.length - 1 ? 'max-lg:pb-16' : ''} lg:px-8 lg:pt-0 xl:px-14 animate-scale-in lg:animate-delay-${(index + 4) * 100} scroll-trigger`}
          >
            <div class='flex items-center justify-between gap-x-4'>
              <h3
                id='tier-basic'
                class='text-base/7 font-semibold text-foreground'
              >
                {plan.name}
              </h3>
              {plan.isMostPopular && (
                <div class='rounded-full bg-primary px-2.5 py-1 text-xs/5 font-semibold text-primary-foreground'>
                  Most Popular
                </div>
              )}
            </div>
            <p class='mt-6 flex items-baseline gap-x-1'>
              <span class='text-5xl font-bold tracking-tight text-foreground'>
                {plan.price}
              </span>
            </p>
            <p class='mt-3 text-sm/6 text-foreground'>{plan.priceSubtext}</p>
            <Button size='lg' href='/contact' className='w-full mt-10'>
              {plan.buttonText}
            </Button>
            <p class='mt-10 text-sm/6 font-semibold text-foreground'>
              {plan.description}
            </p>
            <ul role='list' class='mt-6 space-y-3 text-sm/6 text-foreground'>
              {plan.features.map((feature) => (
                <li class='flex gap-x-3'>
                  <svg
                    class='h-6 w-5 flex-none text-lime-400'
                    viewBox='0 0 20 20'
                    fill='currentColor'
                    aria-hidden='true'
                    data-slot='icon'
                  >
                    <path
                      fill-rule='evenodd'
                      d='M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z'
                      clip-rule='evenodd'
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</Container>
