---
import { Picture } from 'astro:assets';
import project1 from '@/assets/images/home/project-showcase/project-1.png';
import project2 from '@/assets/images/home/project-showcase/project-2.png';
---

<div class='flex w-full pl-2 pr-4 overflow-visible mt-16 max-w-6xl mx-auto'>
  <div
    class='relative flex items-center justify-center overflow-visible w-full'
  >
    <div class='w-3/5 aspect-video opacity-0 mb-31 pointer-events-none'></div>
    <div
      class='absolute bg-gray-50 overflow-hidden w-3/5 h-auto aspect-[16/10] transform rotate-[-2deg] translate-y-6 z-30 rounded-lg shadow-xl hover:scale-115 hover:rotate-[0deg] hover:z-50 transition-all duration-300 project-showcase'
      style='left: 0;'
    >
      <Picture
        src={project1}
        alt='Modern Real Estate Website'
        width={1200}
        height={750}
        widths={[480, 768, 1024, 1536]}
        sizes='(max-width: 768px) 100vw, (max-width: 1024px) 80vw, 60vw'
        formats={['avif', 'webp']}
        class='w-full h-full object-cover'
      />
    </div>
    <div
      class='absolute bg-gray-50 overflow-hidden w-3/5 h-auto aspect-[16/10] transform rotate-[5deg] translate-y-[-12px] z-40 rounded-lg shadow-xl hover:scale-115 hover:rotate-[0deg] hover:z-50 transition-all duration-300 project-showcase'
      style='right: 0;'
    >
      <Picture
        src={project2}
        alt='Bold and modern website for a local auto detailing business'
        width={1200}
        height={750}
        widths={[480, 768, 1024, 1536]}
        sizes='(max-width: 768px) 100vw, (max-width: 1024px) 80vw, 60vw'
        formats={['avif', 'webp']}
        class='w-full h-full object-cover'
      />
    </div>
  </div>
</div>

<style>
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(60px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .project-showcase {
    opacity: 0;
    animation: slideIn 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .project-showcase:first-child {
    animation-delay: 0.2s;
  }

  .project-showcase:last-child {
    animation-delay: 0.5s;
  }
</style>
