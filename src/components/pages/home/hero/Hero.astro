---
import Container from '@/components/shared/Container.astro';
import Button from '@/components/ui/Button.astro';
import PartyPopper from '@lucide/astro/icons/party-popper';
import MousePointerClick from '@lucide/astro/icons/mouse-pointer-click';
import Figma from '@lucide/astro/icons/figma';
import Code from '@lucide/astro/icons/code';
import TabletSmartphone from '@lucide/astro/icons/tablet-smartphone';
import ProjectShowcase from '@/components/pages/home/hero/ProjectShowcase.astro';
---

<Container as='section' className='items-center justify-center'>
  <div
    class='mx-auto max-w-3xl flex flex-col items-center text-center animate-fade-in-up scroll-trigger'
  >
    <div class='flex flex-row rounded-full border items-center p-1 max-w-full'>
      <div
        class='flex bg-foreground px-3 py-1.5 rounded-full items-center gap-2 flex-shrink-0'
      >
        <span class='text-background text-xs font-medium'>New</span>
        <PartyPopper class='size-3.5 text-background' />
      </div>
      <div class='px-3 items-center flex min-w-0 flex-1'>
        <a
          href='/blog/is-your-current-website-costing-you-customers'
          class='cursor-pointer hover:underline block w-full'
        >
          <span
            class='text-sm font-medium line-clamp-1 [@media(max-width:639px)]:text-xs'
          >
            Is Your Current Website Costing You Customers?
          </span>
        </a>
      </div>
    </div>
    <h1
      class='[@media(max-width:439px)]:text-4xl text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-extrabold tracking-tight text-foreground text-pretty [@media(max-width:439px)]:leading-12 leading-15 sm:leading-18 md:leading-21 lg:leading-28 mt-5'
    >
      Crafting Digital<br />
      Experiences That<br />
      <span
        class='inline-flex align-middle bg-lime-400 rounded-md lg:rounded-xl mx-1 [@media(max-width:439px)]:p-1.5 p-2 sm:p-2.5 md:p-3.5 lg:p-4.5 [@media(max-width:439px)]:mb-1.5 mb-2 sm:mb-2.5 md:mb-3 lg:mb-4 shadow-md mouse-click-icon-wrapper group'
        aria-hidden='true'
      >
        <MousePointerClick
          class='[@media(max-width:439px)]:size-5.5 size-7 sm:size-8 md:size-9 lg:size-12 text-foreground mouse-click-icon group-hover:scale-110 transition-transform duration-300'
          aria-hidden='true'
        />
      </span>
      Convert
    </h1>
    <div
      class='flex flex-col lg:flex-row gap-4 lg:gap-8 mt-5 w-full max-w-3xl mx-auto'
      role='list'
      aria-label='Services offered'
    >
      <div
        class='flex flex-row gap-2 items-center justify-center lg:justify-start'
        role='listitem'
      >
        <Figma class='size-4 flex-shrink-0' aria-hidden='true' />
        <span class='[@media(max-width:439px)]:text-sm text-base font-medium'
          >Intuitive Web Design</span
        >
        {/* Animated brand accent dot */}
        <div
          class='relative w-2 h-2 bg-lime-400 rounded-full animate-pulse ml-1'
          aria-hidden='true'
        >
          <div
            class='absolute inset-0 bg-lime-400 rounded-full animate-ping opacity-75'
            aria-hidden='true'
          >
          </div>
        </div>
      </div>
      <div
        class='flex flex-row gap-2 items-center justify-center lg:justify-start'
        role='listitem'
      >
        <Code class='size-4 flex-shrink-0' aria-hidden='true' />
        <span class='[@media(max-width:439px)]:text-sm text-base font-medium'
          >Modern Web Development</span
        >
        {/* Animated brand accent dot */}
        <div
          class='relative w-2 h-2 bg-lime-400 rounded-full animate-pulse ml-1'
          aria-hidden='true'
        >
          <div
            class='absolute inset-0 bg-lime-400 rounded-full animate-ping opacity-75'
            aria-hidden='true'
          >
          </div>
        </div>
      </div>
      <div
        class='flex flex-row gap-2 items-center justify-center lg:justify-start'
        role='listitem'
      >
        <TabletSmartphone class='size-4 flex-shrink-0' aria-hidden='true' />
        <span class='[@media(max-width:439px)]:text-sm text-base font-medium'
          >Engaging Mobile Apps</span
        >
        {/* Animated brand accent dot */}
        <div
          class='relative w-2 h-2 bg-lime-400 rounded-full animate-pulse ml-1'
          aria-hidden='true'
        >
          <div
            class='absolute inset-0 bg-lime-400 rounded-full animate-ping opacity-75'
            aria-hidden='true'
          >
          </div>
        </div>
      </div>
    </div>
    <div class='mt-8'>
      <Button size='xl' href='/contact'> Kickstart Your Project </Button>
    </div>
  </div>
  <ProjectShowcase />
</Container>

<style>
  @keyframes pulseClick {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  .mouse-click-icon-wrapper .mouse-click-icon {
    display: inline-block;
    animation: pulseClick 0.5s ease-in-out 1.2s 1 forwards;
  }

  /* Longer delay for larger screens where images fade in separately */
  @media (min-width: 1024px) {
    .mouse-click-icon-wrapper .mouse-click-icon {
      animation: pulseClick 0.5s ease-in-out 1.8s 1 forwards;
    }
  }
</style>
