---
export interface Props {
  testimonial: {
    body: string;
    author: {
      name: string;
      imageUrl: string | ImageMetadata;
    };
  };
}

const { testimonial } = Astro.props;
---

<figure class='rounded-lg bg-gray-50 p-6'>
  <blockquote class='text-foreground text-sm/6'>
    <p>{testimonial.body}</p>
  </blockquote>
  <figcaption class='mt-6 flex items-center gap-x-4'>
    <img
      class='size-10 rounded-full bg-gray-50'
      src={typeof testimonial.author.imageUrl === 'string' ?
        testimonial.author.imageUrl
      : testimonial.author.imageUrl.src}
      alt={testimonial.author.name}
    />
    <div>
      <div class='font-semibold'>{testimonial.author.name}</div>
    </div>
  </figcaption>
</figure>
