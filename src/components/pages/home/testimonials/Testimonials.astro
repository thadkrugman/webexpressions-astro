---
import Container from '@/components/shared/Container.astro';
import Card from './Card.astro';
import { Picture } from 'astro:assets';
import polarisLogo from '@/assets/images/home/testimonials/polaris.png';

const featuredTestimonial = {
  body: '"webexpressions has been an excellent partner with our business.  The staff is courteous and professional, extremely knowledgeable, and able to assist with a variety of projects.  We\'ve been very happy with both the design and web development work completed for site, and the turnaround time for new work is awesome.  I would strongly recommend this company for web design and development work, especially if you are building something with React or other Javascript libraries."',
  author: {
    name: 'Dave Kush',
    logoUrl: polarisLogo,
  },
};
const testimonials = [
  [
    [
      {
        body: '"Thad did an amazing job with my website. He was very kind and responsive throughout the entire process. I appreciated his ability to work with me and incorporate my ideas into the design. I would highly recommend Thad for any website related work. Cant wait to work with him again in the future!"',
        author: {
          name: 'Marco Sanchez',
          imageUrl:
            'https://images.unsplash.com/photo-1508341591423-4347099e1f19?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=facearea&facepad=2&w=80&h=80&q=80',
        },
      },
      {
        body: '"Excellent job creating website and meeting our immediate needs. Very accommodating and professional and completes in a timely manner. Will use again for future updates."',
        author: {
          name: 'Leigh Capone',
        },
      },
      // More testimonials...
    ],
    [
      {
        body: '"Great job! He even walked me through stuff I was confused about."',
        author: {
          name: 'phenningsen',
        },
      },
      // More testimonials...
    ],
  ],
  [
    [
      {
        body: '"Thad did a wonderful job on my website also got me up and running on Google I highly recommend him for all your advertising and website needs. Great experience!"',
        author: {
          name: 'John Dorazio',
        },
      },
      // More testimonials...
    ],
    [
      {
        body: '"webexpressions did an exceptional job with our marketing campaigns and exceeded our expectations. Polite, professional, and communicated well throughout the entire process. Will definitely use again!"',
        author: {
          name: 'Luke Krugman',
        },
      },
      {
        body: '"Thad did an amazing job with a very abstract concept. Very strongly recommend working with him for web-development projects!"',
        author: {
          name: 'aw06abag',
        },
      },
      {
        body: '"Thad is a professional who knows his stuff and is also ethical. I highly recommend!"',
        author: {
          name: 'Brian Pruitt',
        },
      },
      // More testimonials...
    ],
  ],
];
---

<Container as='section'>
  <div class='max-w-xl text-center mx-auto animate-fade-in-up scroll-trigger'>
    <p class='heading-3'>Testimonials</p>
    <h2 class='mt-2 heading-1'>What My Clients Are Saying</h2>
  </div>
  <div
    class='mx-auto mt-16 grid max-w-2xl grid-cols-1 grid-rows-1 gap-8 text-sm/6 text-foreground sm:mt-20 sm:grid-cols-2 xl:mx-0 xl:max-w-none xl:grid-flow-col xl:grid-cols-4 animate-fade-in-up lg:animate-delay-200 scroll-trigger'
    role='region'
    aria-label='Client testimonials'
  >
    <figure
      class='rounded-lg bg-gray-50 sm:col-span-2 xl:col-start-2 xl:row-end-1'
    >
      <blockquote
        class='p-6 text-lg font-semibold tracking-tight text-foreground sm:p-12 sm:text-xl/8'
      >
        <p>{featuredTestimonial.body}</p>
      </blockquote>
      <figcaption
        class='flex flex-wrap items-center gap-x-4 gap-y-4 border-t border-gray-200/90 px-6 sm:px-12 py-4 sm:flex-nowrap'
      >
        <div
          class='size-9 rounded-full bg-lime-400 flex items-center justify-center uppercase text-background text-xs font-bold tracking-widest'
        >
          DK
        </div>
        <div class='flex-auto'>
          <div class='font-semibold'>{featuredTestimonial.author.name}</div>
        </div>
        <Picture
          src={featuredTestimonial.author.logoUrl}
          alt='Polaris'
          width={100}
          height={100}
          widths={[100, 200]}
          sizes='100px'
          formats={['avif', 'webp']}
          class='h-9 w-auto flex-none'
          loading='lazy'
        />
      </figcaption>
    </figure>
    <div class='space-y-8 xl:contents xl:space-y-0'>
      <div class='space-y-8 xl:row-span-2'>
        {
          testimonials[0][0].map((testimonial, index) => (
            <div
              class={`animate-fade-in-up lg:animate-delay-${Math.min((index + 2) * 100, 400)} scroll-trigger`}
            >
              <Card testimonial={testimonial} />
            </div>
          ))
        }
        <!-- More testimonials... -->
      </div>
      <div class='space-y-8 xl:row-start-1'>
        {
          testimonials[0][1].map((testimonial, index) => (
            <div
              class={`animate-fade-in-up lg:animate-delay-${Math.min((index + 3) * 100, 500)} scroll-trigger`}
            >
              <Card testimonial={testimonial} />
            </div>
          ))
        }
        <!-- More testimonials... -->
      </div>
    </div>
    <div class='space-y-8 xl:contents xl:space-y-0'>
      <div class='space-y-8 xl:row-start-1'>
        {
          testimonials[1][0].map((testimonial, index) => (
            <div
              class={`animate-fade-in-up lg:animate-delay-${Math.min((index + 2) * 100, 400)} scroll-trigger`}
            >
              <Card testimonial={testimonial} />
            </div>
          ))
        }
        <!-- More testimonials... -->
      </div>
      <div class='space-y-8 xl:row-span-2'>
        {
          testimonials[1][1].map((testimonial, index) => (
            <div
              class={`animate-fade-in-up lg:animate-delay-${Math.min((index + 3) * 100, 600)} scroll-trigger`}
            >
              <Card testimonial={testimonial} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Container>
